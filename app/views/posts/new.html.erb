<div class="display-6 text-center py-3 post-heading">New Post</div>

<div class="form-post text-start my-5">
  <div class="form">

    <% post = @post %>
    <%= form_with model: post do |form| %>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= form.label :text %><br/></div>
        <div class="my-2"><%= form.text_area :text, size: "1x5", autofocus: true, :class => 'form-control' %></div>
        <% post.errors.full_messages_for(:name).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= form.label "Optional Image" %><br/></div>
        <div class="my-2"><%= form.file_field :image, required: false, direct_upload: true, accept: "image/png,image/jpg,image/jpeg" %></div>
        <% post.errors.full_messages_for(:image).each do |message| %>
          <div class="error"><%= message %></div>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit "Post", :class => "my-2 small-button" %>
      </div>
    <% end %>
  </div>
</div>

