<div class="container">
  <% @users.each do |user| %>
    <div class="row my-5">
      <div class="col-4 h4 my-3">Name: <%= user.name %></div>
      <div class="col-4 h4 my-3">Email: <%= user.email %></div>
      <div class="col-4"><%= link_to "Send Friend Request", destroy_user_session_path, 'data-turbo-method': :delete, :class => "main-button" %></div>
    </div>
  <% end %>
</div>