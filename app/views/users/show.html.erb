<div class="d-md-block d-none display-5 text-center fw-bold py-3 post-heading">User Profile</div>
<div class="d-md-none d-block h4 text-center fw-bold py-1 post-heading">User Profile</div>

<div class="p-3">
  <div class="row">
    <div class="col-2">
      <% if @user.profile_photo.attached? %>
        <%= image_tag @user.profile_photo, width: "100%", height: "100%" %>
      <% end %>
    </div>

    <div class="col-lg-8 col-6 d-flex align-items-center">
      <div class="h1 fw-bold"><%= @user.name %></div>
    </div>

    <div class="col-lg-2 col-4 d-flex align-items-end">
      <%= link_to "Edit Profile", edit_user_registration_path, :class => "small-button" %>
    </div>
  </div>

  <div class="border border-1 border-dark my-3"></div>

  <div class="row">
    <div class="col-12">
      <div class="h4 px-5 py-2"><span class="fw-bold">About: </span><%= @user.bio %></div>
    </div>
  </div>

  <div class="row mt-3 px-3">
    <div class="col-md-6 col-12 border border-1 border-dark p-3">
      <div class="h4"><span class="fw-bold">Email: </span><%= @user.email %></div>
    </div>

    <div class="col-md-6 col-12 border border-1 border-dark p-3">
      <div class="h4"><span class="fw-bold">Contact Number: </span><%= @user.phone_number %></div>
    </div>
  </div>

  <div class="row pb-0 px-3">
    <div class="col-md-6 col-12 border border-1 border-dark p-3">
      <div class="h4"><span class="fw-bold">Location: </span><%= @user.location %></div>
    </div>

    <div class="col-md-6 col-12 border border-1 border-dark p-3">
      <div class="h4"><span class="fw-bold">Birthday: </span><%= @user.birthday_at.strftime("%d/%m/%Y") %></div>
    </div>
  </div>
</div>
