<div class="form-signin text-center mt-5">
  <div class="form">
    <h1 class="h2 my-5 fw-bold">Forgot your password ?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :email %><br/></div>
        <div class="my-2"><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %></div>
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", :class => "btn-lg w-100 my-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
