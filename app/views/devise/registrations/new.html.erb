<div class="d-md-block d-none display-5 text-center fw-bold py-3 post-heading">Sign Up</div>
<div class="d-md-none d-block h4 text-center fw-bold py-1 post-heading">Sign Up</div>

<div class="form-signin text-center mb-5 mt-3">
  <div class="form">

    <div class="h6 text-center mb-4 fst-italic">Please fill all the fields listed below</div>

    <%= form_for(resource, as: resource_name,html: {'data-turbo' => false}, url: registration_path(resource_name)) do |f| %>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :name %><br/></div>
        <div class="my-2"><%= f.text_field :name, autofocus: true, :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:name).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :phone_number %><br/></div>
        <div class="my-2"><%= f.text_field :phone_number, autofocus: true, :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:phone_number).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :bio %><br/></div>
        <div class="my-2"><%= f.text_area :bio, autofocus: true, size: "1x5", :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:bio).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :location %><br/></div>
        <div class="my-2"><%= f.text_field :location, autofocus: true, :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:location).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>
      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label "Date of Birth" %><br/></div>
        <div class="my-2"><%= f.date_select :birthday_at, start_year: Date.today.year - 60, end_year: Date.today.year, autofocus: true, :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:birthday_at).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :email %><br/></div>
        <div class="my-2"><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:email).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :password %><br></div>
        <div class="my-2"><%= f.password_field :password, autocomplete: "new-password", :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:password).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label :password_confirmation %><br/></div>
        <div class="my-2"><%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control shadow-none', required: true %></div>
        <% f.object.errors.full_messages_for(:password_confirmation).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><span class='text-danger me-2'>*</span><%= f.label "Profile Picture" %><br/></div>
        <div class="my-2"><%= f.file_field :profile_photo, required: true, direct_upload: true, accept: "image/png,image/jpg,image/jpeg" %></div>
        <% f.object.errors.full_messages_for(:profile_photo).each do |message| %>
          <div class="error"><%= message %></div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up",'data-turbo-stream': false, :class => "btn-lg w-100 my-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
