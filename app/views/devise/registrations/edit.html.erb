<div class="form-signin text-center my-5">
  <div class="form">
    <h1 class="h1 my-5 fw-bold">Edit User Profile</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :name %><br/></div>
        <div class="my-2"><%= f.text_field :name, autofocus: true, :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:name).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :phone_number %><br/></div>
        <div class="my-2"><%= f.text_field :phone_number, autofocus: true, :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:phone_number).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :bio %><br/></div>
        <div class="my-2"><%= f.text_area :bio, autofocus: true, size: "1x5", :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:bio).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :location %><br/></div>
        <div class="my-2"><%= f.text_field :location, autofocus: true, :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:location).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :birthday_at %><br/></div>
        <div class="my-2"><%= f.date_select :birthday_at, start_year: Date.today.year - 50, end_year: Date.today.year, autofocus: true, :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:birthday_at).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label "Profile Picture" %><br/></div>
        <div class="my-2"><%= f.file_field :profile_photo, required: true, direct_upload: true, accept: "image/png,image/jpg,image/jpeg" %></div>
        <% f.object.errors.full_messages_for(:profile_photo).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :email %></div>
        <div class="my-2"><%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:email).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="field form-floating">
        <div class="fw-bold my-2"><%= f.label :current_password %></div>
        <div class="my-2"><%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control shadow-none' %></div>
        <% f.object.errors.full_messages_for(:current_password).each do |message| %>
          <div class="error-messages"><%= message %></div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Update",'data-turbo-stream': false, :class => "btn-lg w-100 my-2" %>
      </div>
    <% end %>
  </div>
</div>

